<center>
<h1>Pomodoro</h1>
</center>

  <div ng-controller="TaskCtrl" style="padding-right:180px; padding-left:180px">

      <div id = "taskDivInProgress">

        <h2>In Progress</h2>
        <br>
        <li style = "list-style: none;" ng-repeat="task in tasks | filter: {status: 'in_progress'} | orderBy:'created_at'">
          <!--  filter-->
          <p>
          <span class="badge badge-inverse" ng-class="{'badge badge-select': select == this, 'badge badge-inverse': select != this}" ng-click="selectTask()" ng-mouseover = "showButton()" ng-mouseout = "hideButton()">
            <label ng-model="task">
              {{task.description}}
            </label>
            <input type = "checkbox" ng-click="updateTask()">
            <br>
            Pomodoro Number: {{task.tomatonum}}
          </span>
          <a href="#" class="btn btn-default" ng-click="deleteTask()" ng-show="hover == true && selectedTask == this"> X</a>
        </p>
        </li>
        <input type ="text" ng-model="newTask" placeholder="New Task"> <a href="#" class="btn btn-default" ng-click="addTask()"> Add</a>

      </div>

      <div style = "position:fixed; top: 30%; left: 50%; margin-top:-50px; margin-left:-100px;" ng-show="myValue == true">
        <br><br><br><br><br><br><br><br>

          <h1> {{counter}}</h1>

        <button ng-click="countdown()">Start</button><button ng-click="stop()">Stop/Reset</button>
      </div>


      <div id = "taskDivComplete">

        <h2>Complete</h2>
        <br>
        <li style = "list-style: none;" ng-repeat="task in tasks | filter: {status: 'complete'}">
          <p>
            <span class="badge badge-inverse" ng-mouseover = "showButton()" ng-mouseout = "hideButton()">
              <label ng-model="task">
                {{task.description}}
              </label>
              <input type = "checkbox" ng-click="updateTask()">
              <br>
              Pomodoro Number: {{task.tomatonum}}
            </span>
            <a href="#" class="btn btn-default" ng-click="deleteTask()" ng-show="hover == true && selectedTask == this"> X</a>
          </p>
        </li>

      </div>

</div>
