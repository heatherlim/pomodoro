<center>
<h1>Pomodoro</h1>
<a target="_blank" href = "http://lifehacker.com/productivity-101-a-primer-to-the-pomodoro-technique-1598992730">What is the pomodoro technique?</a>
</center>

  <div ng-controller="TaskCtrl" style="padding-right:50px; padding-left:50px;">

      <div id = "taskDivInProgress">

        <h2>In Progress</h2>
        <br>
        <li style = "list-style: none;" ng-repeat="task in tasks | filter: {status: 'in_progress'} | orderBy:'created_at'">
    
          <p>
          <span class="badge badge-inverse" ng-class="{'badge badge-select': select == this, 'badge badge-inverse': select != this}" ng-click="selectTask()" ng-mouseover = "showButton()" ng-mouseout = "hideButton()">
            <label ng-model="task" >
              {{task.description}}
            </label>
            <input type = "checkbox" ng-click="updateTask(); $event.stopPropagation();">
            <br>
            Pomodoro Number: {{task.tomatonum}}
            <a href="#"  ng-click="deleteTask(); $event.stopPropagation();" ng-show="hover == true && selectedTask == this"> delete</a>
          </span>
        </p>
        </li>
        <br>
        <form ng-submit="addTask()" style="padding-bottom: 60px;">
          <input type ="text" ng-model="newTask" placeholder="New Task (hit 'enter' to submit)" style="width: 200px;">
        </form> 
      
      </div>

      <div style = "position:fixed; top: 40%; left: 43%; margin-top:-50px;" ng-show="myValue == true">
          <h1> {{counter | secondsToDateTime | date:'mm:ss'}} </h1>
        <div  style = "padding-left: 40px;">
          <button ng-click="countdown()" ng-disabled="counterOn"><font color = "black">Start</button> <button ng-click="stop()">{{stopReset}}</font></button>
        </div>
      </div>

      <div id = "taskDivComplete">

        <h2>Complete</h2>
        <br>
        <li style = "list-style: none;" ng-repeat="task in tasks | filter: {status: 'complete'}">
          <p>
            <span class="badge badge-inverse-complete" ng-mouseover = "showButton()" ng-mouseout = "hideButton()">
              <label ng-model="task">
                {{task.description}}
              </label>
              <input type = "checkbox" ng-click="updateTask()">
              <br>
              Pomodoro Number: {{task.tomatonum}}
                <a href="#"  ng-click="deleteTask()" ng-show="hover == true && selectedTask == this"> delete</a>
            </span>
            
            
          </p>
        </li>

      </div>

</div>
